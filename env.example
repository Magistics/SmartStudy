# SmartStudy Copilot - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration (alternative)
GOOGLE_API_KEY=your_google_api_key_here

# OmniDimension Configuration
OMNIDIM_API_KEY=your_omnidim_api_key_here
OMNIDIM_BASE_URL=https://api.omnidimension.ai
OMNIDIM_MODEL=omnidim-1.0
OMNIDIM_VOICE_MODEL=omnidim-voice-1.0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Database Configuration (for future use)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=smartstudy_copilot
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_email_password

# Redis Configuration (for future use)
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# App Configuration
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-3.5-turbo
STUDY_MATERIALS_PATH=./uploads/study-materials
VECTOR_STORE_PATH=./vector_store

# Learning Configuration
DEFAULT_QUIZ_SIZE=5
QUIZ_TIME_LIMIT=15
PASSING_SCORE=70
MAX_EXPLANATION_LENGTH=1000

# Parent Update Configuration
UPDATE_FREQUENCY_HOURS=24
VOICE_UPDATE_ENABLED=false

# Voice Assistant Configuration
VOICE_ASSISTANT_ENABLED=true
VOICE_RECOGNITION_LANGUAGE=en-US
VOICE_SPEECH_LANGUAGE=en-US
VOICE_SPEECH_RATE=1.0
VOICE_SPEECH_PITCH=1.0
VOICE_SPEECH_VOLUME=1.0
VOICE_TIMEOUT_MS=10000
VOICE_CONTINUOUS_MODE=false
VOICE_INTERIM_RESULTS=true

# OmniDimension Voice Settings
OMNIDIM_VOICE_ENABLED=true
OMNIDIM_VOICE_SPEED=1.0
OMNIDIM_VOICE_PITCH=1.0
OMNIDIM_VOICE_VOLUME=1.0
OMNIDIM_VOICE_PERSONA=educational
OMNIDIM_VOICE_EMOTION=neutral

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Admin SDK (for server-side operations)
FIREBASE_ADMIN_TYPE=service_account
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=your_client_id
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_ADMIN_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_ADMIN_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com 